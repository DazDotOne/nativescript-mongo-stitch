{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        }
    },
    "include": [
        "../src/core",
        "../src/sdk",
        "../src/services/aws",
        "../src/services/aws-s3",
        "../src/services/aws-ses",
        "../src/services/http",
        "../src/services/mongodb-remote",
        "../src/services/twilio",
        "**/*",
        "../src/node_modules/tns-core-modules/tns-core-modules.d.ts"
    ],
    "exclude": [
        "../src/node_modules",
        "../src/",
        "node_modules",
        "platforms"
    ],
    "compileOnSave": false
}